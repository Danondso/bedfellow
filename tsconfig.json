{
  "extends": "@tsconfig/react-native/tsconfig.json",
   "include": ["src/**/*"],
   "typeRoots": ["./src/types"],
   "compilerOptions": {
     "allowJs": true,
     "allowSyntheticDefaultImports": true,
     "esModuleInterop": true,
     "isolatedModules": true,
     "jsx": "react-native",
     "lib": ["es2017"],
     "moduleResolution": "node",
     "noEmit": true,
     "strict": true,
     "target": "esnext",
     "types": ["node", "jest"]
   },
   "paths": {
     "@screens/*": ["screens/*"],
     "@service/*": ["service/*"],
     "@components/*": ["components/*"],
     "@context/*": ["context/*"],
     "@theme/*": ["theme/*"],
     "@types/*": ["types/*"],
   },
   "exclude": [
     "node_modules",
     "babel.config.js",
     "metro.config.js",
     "jest.config.js",
     "**/*.test.*", 
     "**/__mocks__/*", 
     "**/__tests__/*"
   ]
 }